@model PetsAlone.Mvc.Models.PetViewModel

@{
    ViewData["Title"] = "Add New Pet";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewPet" method="post" id="petForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MissingSinceDateTime" class="control-label"></label>
                <input id="missingDate" asp-for="MissingSinceDateTime" asp- class="form-control" required value="@DateTime.Now" />
                <span asp-validation-for="MissingSinceDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="selectedPetType" class="control-label"></label>
                <select class="form-control" asp-for="selectedPetType" asp-items="@(new SelectList(Model.PetTypes, "Value", "Text"))" required>
                    <option value="">--Select--</option>
                </select>
                <span asp-validation-for="selectedPetType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}